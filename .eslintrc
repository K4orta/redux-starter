{
    "ecmaFeatures": {
        "jsx": true
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jquery": true,
        "mocha": true
    },
    "globals": {
      "expect": true
    },
    "plugins": [
      "react"
    ],
    "rules": {
        "space-before-function-paren": [
            2,
            {
              "anonymous": "never",
              "named": "never"
            }
        ],
        "dot-notation": [2, {"allowPattern": "^[a-z]+(_[a-z]+)+$"}],
        "arrow-body-style": [0, "always"],
        "indent": [2,2],
        "quote-props": [0, "as-needed"],
        "new-cap": [0],
        "dot-notation": [0]
    },
    "extends": "xo"
}
